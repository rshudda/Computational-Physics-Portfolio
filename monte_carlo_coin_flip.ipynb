    "\n",
    "import numpy as np\n",
    "import matplotlib.pyplot as plt\n",
    "\n",
    "n=10000\n",
    "res=np.random.choice([0,1], size=n)\n",
    "cum=np.cumsum(res)/np.arange(1,n+1)\n",
    "\n",
    "plt.plot(cum)\n",
    "plt.axhline(0.5, linestyle='--')\n",
    "plt.title(\"Monte Carlo Coin Flip\")\n",
    "plt.show()\n"
   ]
  }
